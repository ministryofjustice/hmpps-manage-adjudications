{% macro card(params) %}
  <div class="card{% if params.clickable %} card--clickable{% endif %}" data-qa="{{ params.id }}">
    <h2 class="govuk-heading-m card__heading">
      {%- if params.href %}
        <a class="govuk-link card__link" href="{{ params.href }}">{{ params.heading | safe }}</a>
      {%- else %}
        {{ params.heading }}
      {%- endif %}
    </h2>

    {%- if params.description %}
      <p class="govuk-body card__description">{{ params.description | safe }}</p>
    {%- endif %}
    {%- if params.links %}
      {% for link in params.links %}
        <p class="govuk-body card__link"><a href={{ link.href }}>{{ link.text | safe }}</a></p>
      {% endfor %}
    {%- endif %}
  </div>
{% endmacro %}