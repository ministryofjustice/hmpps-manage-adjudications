{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% macro adjudicationReviewStatusSummary(reviewStatus, reviewSummary = [], missingValueText = 'Not entered', attributes = {}, classes='') %}
  {% set rows = [] %}

    {% for detail in reviewSummary %}
      {% set value = {text: detail.value | showDefault(missingValueText)} %}

	  {% set rows = (rows.push(
		{
			key: {
			text: detail.label,
			classes: labelClass
			},
			value: value
		}
	  ), rows) %}
  	{% endfor %}

    <div class="adjudicationReviewStatusSummary-container">
		<h2 class="govuk-heading-m">Status: {{ reviewStatus }}</h2>
  		{% if rows.length %}
			{{ govukSummaryList({
			rows: rows,
			classes: classes,
			attributes: attributes
			}) }}
		{% endif %}
  	</div>
{% endmacro %}