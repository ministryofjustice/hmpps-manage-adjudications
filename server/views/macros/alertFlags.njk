{% macro alertFlags(alerts, newLine = false) %}
  {% set alertClass %}
    {% if newLine %}
      alerts-list-no-flex
    {% else %}
      alerts-list
    {% endif %}
  {% endset %}
  {% if alerts.length %}
    <ul class={{ alertClass }}>
        {% for alert in alerts %}
          <li class="{{ alert.classes }}">
            {{ alert.label }}
          </li>{% if newLine %}<br>{% endif %}
        {% endfor %}
      </ul>
  {% else %}
    <p class="govuk-body govuk-!-margin-bottom-0"> - </p>
  {% endif %}
{% endmacro %}
