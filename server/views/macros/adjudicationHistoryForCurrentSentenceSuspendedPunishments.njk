{% macro adjudicationHistoryForCurrentSentenceSuspendedPunishments(adjudicationHistoryForCurrentSentenceData) %}
    <div class='govuk-!-margin-left-8 govuk-!-margin-right-8'>
        <div class="break-inside-avoid">
        <h2>Suspended punishments (if applicable)</h2>
        <div class='adjudication-pdf-section-sentence-details-three-items'>
            <div class='adjudication-pdf-section-sentence-details-three-items__item'>
                <p class='govuk-!-margin-bottom-1'>List any outstanding suspended punishment(s).</p>
            </div>
            <div class='adjudication-pdf-section-sentence-details-three-items__item'>
                <p class='govuk-!-margin-bottom-1'>Number of suspended punishments</p>
            </div>
            <div class='adjudication-pdf-section-sentence-details-three-items__item'>
                <input type='text' class='adjudication-pdf-input adjudication-pdf-input-issuing-officer'>
            </div>
        </div>
        </div>

        {% for punishment in range(1, 5) %}
            <div class='break-inside-avoid'>
                <h2>Suspended punishment {{ loop.index }}</h2>
                <div class='adjudication-pdf-section-sentence-details'>
                    <div class='adjudication-pdf-section-sentence-details__item'>
                        <p class='govuk-!-margin-bottom-1'>Charge number</p>
                        <input type='text' class='adjudication-pdf-input adjudication-pdf-input-text-box-third-width'>
                    </div>
                    <div class='adjudication-pdf-section-sentence-details__item'>
                        <p class='govuk-!-margin-bottom-1'>Date (DD/MM/YYYY)</p>
                        <input type='text' class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'>
                        <span>
                            <strong> / </strong>
                        </span><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'>
                        <span>
                            <strong> / </strong>
                        </span><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'>
                    </div>
                </div>
                <div class='break-inside-avoid'>
                    <p class='govuk-!-margin-top-3'>Offence</p>
                    <input type='text' class='adjudication-pdf-input adjudication-pdf-brief-text-entry'>
                </div>
                <div class='break-inside-avoid'>
                    <p class='govuk-!-margin-top-3'>Punishment</p>
                    <input type='text' class='adjudication-pdf-input adjudication-pdf-brief-text-entry'>
                </div>
            </div>
        {% endfor %}
    </div>
{% endmacro %}