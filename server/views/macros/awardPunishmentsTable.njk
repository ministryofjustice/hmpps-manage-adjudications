{% from "govuk/components/table/macro.njk" import govukTable %}

{% macro awardPunishmentsTable(dataArray, redirectAfterRemoveUrl, adjudicationNumber, changeUrl) %}
  {% set rows = [] %}
  {% for data in dataArray %}
    {% set redisId = data.redisId %}
    {% set removeColumnValue = '<p class="govuk-body govuk-!-margin-bottom-1"><a href="'+redirectAfterRemoveUrl+redisId+'" data-qa="delete-'+redisId+'" class="govuk-link">Remove</a></p>' %}
    {% set changeColumnValue = '<p class="govuk-body govuk-!-margin-bottom-1"><a href="'+changeUrl+'" data-qa="edit-'+redisId+'" class="govuk-link">Change</a></p>' %}

    {% set rows = (rows.push(
      [
          {
            text: data.type | convertPunishmentType(data.stoppagePercentage, data.privilegeType, data.otherPrivilege),
            classes: "columnWidth30"
          },
          {
            text: data.schedule.startDate | formatTimestampTo('DD MMM YYYY') if data.schedule.startDate else '-',
            classes: "columnWidth15"
          },
          {
            text: data.schedule.endDate | formatTimestampTo('DD MMM YYYY') if data.schedule.endDate else '-',
            classes: "columnWidth15"
          },
          {
            text: data.schedule.days,
            classes: "columnWidth12"
          },
          {
            text: data.schedule.suspendedUntil | formatTimestampTo('DD MMM YYYY') if data.schedule.suspendedUntil  else '-',
            classes: "columnWidth12"
          },
          {
            text: '-',
            classes: "columnWidth20"
          },
          {
          html: changeColumnValue,
          classes: "changeColumn"
          },
          {
            html: removeColumnValue,
            classes: "removeColumn"
          }
      ]
    ), rows) %}
  {% endfor %}

      {% if rows.length %}
      {{ govukTable({
        head: [
          {
            text: "Type"
          },
          {
            text: "Start date"
          },
          {
            text: "Last day"
          },
          {
            text: "Number of days"
          },
          {
            text: "Suspended until"
          },
          {
            text: "Activated from report"
          },
          {
            text: null
          },
          {
            text: null
          }
        ],
        rows: rows,
        attributes: {"data-qa": "punishments-table"}
      }) }}
    {% endif %}

{% endmacro %}