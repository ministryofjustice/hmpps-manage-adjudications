{% macro adjudicationHearingContinuationDetails(adjudicationHearingContinuationData) %}
    <div class='govuk-!-margin-left-8 govuk-!-margin-right-8'>
        <hr class='govuk-section-break govuk-section-break--m govuk-section-break--visible'>

        <div class='adjudication-pdf-section-prisoner govuk-!-width-full'>
            <div class='adjudication-pdf-section-prisoner__item'>
                <p class='govuk-!-margin-bottom-0 govuk-!-font-weight-bold'>Name</p>
                <p class='govuk-!-margin-bottom-0'
                   data-qa='notice-of-being-placed-on-report-prisoner-display-name'>
                    {{ adjudicationHearingContinuationData.prisonerDisplayName }}
                </p>
            </div>
            <div class='adjudication-pdf-section-prisoner__item'>
                <p class='govuk-!-margin-bottom-0 govuk-!-font-weight-bold'>Prison number</p>
                <p class='govuk-!-margin-bottom-0'
                   data-qa='notice-of-being-placed-on-report-prisoner-number'>
                    {{ adjudicationHearingContinuationData.prisonerNumber }}
                </p>
            </div>
            <div class='adjudication-pdf-section-prisoner__item'>
                <p class='govuk-!-margin-bottom-0 govuk-!-font-weight-bold'>Location</p>
                <p class='govuk-!-margin-bottom-0'
                   data-qa='notice-of-being-placed-on-report-prisoner-location-description'>
                    {{ adjudicationHearingContinuationData.prisonerLocationDescription }}
                </p>
            </div>
        </div>

        <hr class='govuk-section-break govuk-section-break--m govuk-section-break--visible'>

        <div>
            <p>Record all evidence given, reasons for decisions made during the course of the hearing</br>
               (adjournment, for example), reasons for declining to call any requested witnesses, reasons for</br>
               finding the charge proved or not and other relevant points.
            </p>

            <div class="adjudication-pdf-section-hearing-record adjudication-pdf-input">
                <div class="adjudication-pdf-section-hearing-record__item govuk-!-margin-bottom-1 govuk-!-margin-right-2">
                    <p>Continuation page no.</p>
                </div>
                <div class="adjudication-pdf-section-hearing-record__item govuk-!-margin-bottom-3 govuk-!-margin-right-3">
                    <input type='text' class='adjudication-pdf-input adjudication-pdf-hearing-record'>
                </div>
            </div>

            <div class="adjudication-pdf-section-signature-boxes-mid-size">
                <div class="adjudication-pdf-section-signature-boxes-mid-size__item">
                    <p class='govuk-!-margin-bottom-1 govuk-!-margin-top-3'>Signature of adjudicator</p>
                    <input type='text' class='adjudication-pdf-input adjudication-pdf-signature-box-mid-size'>
                </div>
                <div class="adjudication-pdf-section-signature-boxes-mid-size__item govuk-!-margin-left-3">
                    <p class='govuk-!-margin-bottom-1 govuk-!-margin-top-3'>Name (BLOCK CAPITALS)</p>
                    <input type='text' class='adjudication-pdf-input adjudication-pdf-signature-box-mid-size'>
                </div>
            </div>
            <div class="adjudication-pdf-section-date-signature govuk-!-margin-left-3">
                <div class='adjudication-pdf-section-date-signature__item'>
                    <p class='govuk-!-margin-bottom-1 govuk-!-margin-top-3'>Date (DD/MM/YYYY)</p>
                    <input type='text' class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><span><strong> / </strong></span><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><span><strong> / </strong></span><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'>
                </div>
            </div>
        </div>
    </div>

{% endmacro %}
