{% from "govuk/components/input/macro.njk" import govukInput %}

{% macro otherPersonOffenceCodeDecisionInput(answerId, decisionForm, selectedAnswerViewData, errors) %}
    {% set selectedAnswerId = decisionForm.selectedAnswerId %}
    {% set anotherNameInput = decisionForm.selectedAnswerData.otherPersonNameInput %}
        <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-1">Enter a name</p>
        <div id="otherPersonName" class="govuk-form-group flex-container flex-column">
            {{ govukInput({
                id: "otherPersonNameInput",
                name: "otherPersonNameInput",
                classes: "govuk-!-width-one-third",
                value: selectedAnswerId == answerId and staffSearchFirstNameInput,
                errorMessage: errors | findErrors(["otherPersonNameInput"]),
                label: {
                    text: "Enter a name"
                }
            }) }}
        </div>
{% endmacro %}