{% from "../macros/datePicker.njk" import datePicker %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

{% macro hearingsAndResidentalLocationFilter(params) %}
    <form class="horizontal-form-container" method="POST" novalidate="novalidate" data-qa="awarded-punishments-and-damages-form">
        <input type="hidden" name="_csrf" value="{{ params.csrfToken }}" />
        <div class="horizontal-form" id="awardedPunishmentsAndDamagesFilter">
            <div class="hearings-arrow arrow-left" id="hearing-arrow-left" data-qa="hearing-date-left-arrow"></div>
            {{ datePicker({
                id: 'hearingDate',
                label: 'Date of hearing',
                labelClasses: 'govuk-!-font-weight-bold',
                name: 'hearingDate[date]',
                date: params.filter.hearingDate,
                attributes: {'data-disable-future-date':'false', 'data-qa': "hearing-date-picker" },
                classes: 'govuk-input--width-10'
            }) }}
            <div class="hearings-arrow arrow-right" id="hearing-arrow-right" data-qa="hearing-date-right-arrow"></div>

            {{ govukSelect({
                id: 'locationId',
                label: {
                    text: 'Residential location',
                    classes: 'govuk-!-font-weight-bold'
                },
                name: 'locationId',
                items: params.locations | toSelect('locationId', 'userDescription', params.filter.locationId, null, 'description' ),
                attributes: {
                    "data-qa": "locationId"
                }
            }) }}
        </div>
        <div class="horizontal-form hearings-filter-apply-clear">
        {{ govukButton({
            text: "Apply",
            type: "submit",
            classes: "govuk-button--submit awarded-punishments-and-damages-filter-apply",
            attributes: { "data-qa": "awarded-punishments-and-damages-filter-apply" }
        }) }}
        <p class="govuk-body filter-clear-link"><a class='govuk-link' href='{{ params.clearUrl }}' data-qa='clear-filter'>Clear</a></p>
        </div>
    </form>
{% endmacro %}
