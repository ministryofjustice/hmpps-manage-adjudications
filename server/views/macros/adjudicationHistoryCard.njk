{% macro adjudicationHistoryCard(adjudication) %}
  <div class="adjudication-history-card-list-item" role="listitem">
    <div class="adjudication-history-card-list-item__content">
      <div class="adjudication-history-card-list-item__header">
        <h2 class="adjudication-history-card-list-item__title govuk-heading-m
">{{ adjudication.chargeNumber }}</h2>
        <p class="adjudication-history-card-list-item__status govuk-body">{{ adjudication.status | reportedAdjudicationStatusDisplayName }}</p>
      </div>
      <p class="adjudication-history-card-list-item__notes govuk-body">{{ adjudication.offenceDetails.offenceRule.paragraphDescription }}</p>
      <p class="adjudication-history-card-list-item__metadata govuk-body">{{ adjudication.incidentDetails.dateTimeOfDiscovery | formatTimestampTo('DD/MM/YYYY - hh:mm') }}</p>
      <p class="adjudication-history-card-list-item__location govuk-body">Happened at {{ adjudication.originatingAgencyId }}</p>
    </div>
  </div>
{% endmacro %} 