{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% macro incidentDetailsSummaryList(array = [], missingValueText = 'Not entered', attributes = {}, classes='') %}
  {% set rows = [] %}

  {% for detail in array %}
    {% if detail.html %}
      {% set value = {html: detail.html | showDefault(missingValueText)} %}
    {% else %}
      {% set value = {text: detail.value | showDefault(missingValueText)} %}
    {% endif %}

    {% set rows = (rows.push(
      {
        key: {
          text: detail.label,
          classes: labelClass
        },
        value: value
      }
    ), rows) %}
  {% endfor %}

  {% if rows.length %}
    {{ govukSummaryList({
      rows: rows,
      classes: classes,
      attributes: attributes
    }) }}
  {% endif %}
{% endmacro %}