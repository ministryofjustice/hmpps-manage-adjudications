{% macro adjudicationHistoryForCurrentSentencePreviousAdjudication(adjudicationHistoryForCurrentSentenceData) %}
    <div class='govuk-!-margin-left-8 govuk-!-margin-right-8'>
        <h2>Previous adjudication details</h2>
				{# TODO PUT THIS IN TABLE #}
        <p>Total previous findings of guilt on adjudication (on current sentence): {{ adjudicationHistoryForCurrentSentenceData.chargeProvedSentenceCount }}</p>
        <p>Number of previous findings of guilt at the current establishment: {{ adjudicationHistoryForCurrentSentenceData.chargeProvedAtCurrentEstablishmentCount }}</p>
        <p>Number of charges for same offence: {{ adjudicationHistoryForCurrentSentenceData.sameOffenceCount }}</p>

				{% if adjudicationHistoryForCurrentSentenceData.lastReportedOffence %}
        <h2>Details of the last reported same offence</h2>
				<p>Date: {{ adjudicationHistoryForCurrentSentenceData.lastReportedOffenceDiscoveryDate }}</p>
				<p>Charge number: {{  adjudicationHistoryForCurrentSentenceData.lastReportedOffence.chargeNumber }}</p>
				<p>Reporting officer's statement about the offence: {{ adjudicationHistoryForCurrentSentenceData.lastReportedOffence.statement }}</p>
				<p>Punishment given: </p> 
				{# TODO PUNISHMENTS #}


        <div class='adjudication-pdf-section-sentence-details'>
            <div class='adjudication-pdf-section-sentence-details__item'>
                <p class='govuk-!-margin-bottom-1 govuk-!-margin-top-3'>Date of last reported same offence, if applicable (DD/MM/YYYY)</p>
                <input type='text' class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><span><strong> / </strong></span><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><span><strong> / </strong></span><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'><input type='text'  class='adjudication-pdf-input adjudication-pdf-input__square'>
            </div>
            <div class='adjudication-pdf-section-sentence-details__item'>
                <p class='govuk-!-margin-bottom-1 govuk-!-margin-top-3'>Charge number</p>
                <input type='text' class='adjudication-pdf-input adjudication-pdf-input-text-box-third-width'>
            </div>
        </div>

        <div class='break-inside-avoid'>
            <p class='govuk-!-margin-top-3'>Brief details of the offence</p>
            <input type='text' class='adjudication-pdf-input adjudication-pdf-brief-offence-details-small'>
        </div>

        <div class='break-inside-avoid'>
            <p class='govuk-!-margin-top-3'>Punishment given</p>
            <input type='text' class='adjudication-pdf-input adjudication-pdf-punishment-given-small'>
        </div>
    </div>
{% endmacro %}
