{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% macro activateSuspendedPunishmentsTable(punishmentsArray) %}
  {% set rows = [] %}
  {% for punishment in punishmentsArray %}
    {% set sanction = punishment.punishment %}
      {% set activateButton = '<button type="submit" class="govuk-button govuk-button--secondary govuk-!-margin-bottom-0" data-module="govuk-button" attributes: { "data-qa": "activate-button" }>Activate</button>' %}

    {% set rows = (rows.push(
      [
          {
            text: sanction.type | convertPunishmentType(sanction.stoppagePercentage, sanction.privilegeType, sanction.otherPrivilege),
            classes: "columnWidth30"
          },
          {
            text: punishment.reportNumber,
            classes: "columnWidth15"
          },
          {
            text: sanction.schedule.days,
            classes: "columnWidth15"
          },
          {
            text: sanction.schedule.suspendedUntil,
            classes: "columnWidth12"
          },
          {
            html: activateButton,
            classes: ""
          }
      ]
    ), rows) %}
  {% endfor %}

  {% if rows.length %}
    {{ govukTable({
        head: [
          {
            text: "Type"
          },
          {
            text: "Report number"
          },
          {
            text: "Number of days"
          },
          {
            text: "Suspended until"
          },
          {
            text: null
          }
        ],
        rows: rows,
        attributes: {"data-qa": "activate-suspended-punishments-table"}
      }) }}
  {% endif %}

{% endmacro %}