{% from "govuk/components/table/macro.njk" import govukTable %}

{% macro commentaryChartData(chartSetting) %}
	<div class="main-chart-with-data-panel commentary-chart-with-data-panel" id="chart-panel-{{ chartSetting.chartData.elementId }}">

		<h2 class="govuk-heading-m govuk-!-margin-bottom-4">{{ chartSetting.title }}</h2>

		{% for chartEntry in chartSetting.chartData.chartEntries %}
			<div class="govuk-body chart-table-panel">
				<div class="govuk-!-font-size-48 govuk-!-font-weight-bold">{{ chartEntry.data }}</div>
				<div class="govuk-!-margin-top-2 govuk-!-font-size-19">{{ chartSetting.textBeforeProportion }} <span class="govuk-!-font-weight-bold">{{ chartEntry.proportion }}</span> {{ chartSetting.textAfterProportion }}</div>
			</div>
		{% endfor %}

	</div>
{% endmacro %}
