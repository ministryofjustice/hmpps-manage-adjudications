{% extends "../partials/layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set title = "Prisoner has been placed on report" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}
    {{ govukPanel({
        titleText: prisonerFirstAndLastName + ' has been placed on report',
        html: 'Your charge number is: <br><strong>' + adjudicationNumber + '</strong>',
        classes: "govuk-!-margin-bottom-6"
    }) }}

    <div class="confirmed-on-report-section">
        <h2 class="govuk-heading-m">What you must do next</h2>

        <p class="govuk-body">{{ prisonerFirstAndLastName }} must be given a copy of this report by {{ expirationTime }} on {{ expirationDay }}.</p>

        <div class="confirmed-on-report-process-warning">
            <p class="confirmed-on-report-process-warning-text">You must follow local processes. You might need to give a copy of the printed report to another member of staff to review
                before it is given to {{ prisonerFirstAndLastName }}.</p>
        </div>
    </div>

    <p class="govuk-body">You must make sure that {{ prisonerFirstAndLastName }} can understand the report.</p>

    {% if showPrisonerPreferredLanguage %}
        <div class="confirmed-on-report-section">
            <p class="confirmed-on-report-list-header-text">{{ prisonerFirstAndLastName }}â€™s preferred language is:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>{{ prisonerPreferredLanguage }}</li>
            </ul>
        </div>

        {% if showPrisonerOtherLanguages %}
            <div class="confirmed-on-report-section">
                <p class="confirmed-on-report-list-header-text">They have other languages of:</p>
                <ul class="govuk-list govuk-list--bullet">
                {% for entry in prisonerOtherLanguages %}
                    <li>{{ entry }}</li>
                {% endfor %}
                </ul>
            </div>
        {% endif %}
    {% endif %}

    {% if showPrisonerNeurodiversities %}
        <div class="confirmed-on-report-section">
            <p class="confirmed-on-report-list-header-text">They have recorded disabilities and learning difficulties of:</p>
            <ul class="govuk-list govuk-list--bullet">
            {% for entry in prisonerNeurodiversities %}
                <li>{{ entry }}</li>
            {% endfor %}
            </ul>
        </div>
    {% endif %}
    
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

    <div class="govuk-body confirmed-on-report-print-link">
        <a href="/print-report?adjudicationNumber={{ adjudicationNumber }}" class="govuk-link print-link govuk-!-display-none-print">
            Print a copy of this report
        </a>
    </div>

    {{ govukButton({
        text: 'Finish',
        element: 'a',
        href: '/place-a-prisoner-on-report',
        classes: "govuk-button--secondary",
        attributes: {
            'data-test': 'place-a-prisoner-on-report'
        }
    }) }}

{% endblock %}