{% extends "../partials/layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set title = "Prisoner has been placed on report" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}
    {{ govukPanel({
        titleText: prisonerFirstAndLastName + ' has been placed on report. Your charge number is ' + adjudicationNumber + '.',
        classes: "govuk-!-margin-bottom-6"
    }) }}

    <h2 class="govuk-heading-m">What you must do next</h2>

    <p class="govuk-body">{{ prisonerFirstAndLastName }} must be given a copy of this report by {{ expirationTime }} on {{ expirationDay }}.</p>

    <div class="whatever">
        <p class="govuk-body">You must follow local processes. You might need to give a copy of the printed report to another member of staff to review
            before it is given to {{ prisonerFirstAndLastName }}.</p>
    </div>

    <p class="govuk-body">You must make sure that {{ prisonerFirstAndLastName }} can understand the report.</p>

    {% if showPrisonerPreferredLanguage %}
        <p class="govuk-body">{{ prisonerFirstAndLastName }}â€™s preferred language is:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>{{ prisonerPreferredLanguage }}</li>
        </ul>

        {% if showPrisonerOtherLanguages %}
            <p class="govuk-body">They have other languages of:</p>
            <ul class="govuk-list govuk-list--bullet">
            {% for entry in prisonerOtherLanguages %}
                <li class="govuk-body govuk-!-margin-bottom-4">{{ entry }}</li>
            {% endfor %}
            </ul>
        {% endif %}
    {% endif %}

    {% if showPrisonerNeurodiversities %}
        <p class="govuk-body">They have recorded disabilities and learning difficulties of:</p>
        <ul class="govuk-list govuk-list--bullet">
        {% for entry in prisonerNeurodiversities %}
            <li class="govuk-body govuk-!-margin-bottom-4">{{ entry }}</li>
        {% endfor %}
        </ul>
    {% endif %}

    <div class="govuk-body">
        <img src="/images/Printer_icon.png" alt="Print icon"/>
        <a href="/print-report?adjudicationNumber={{ adjudicationNumber }}" class="govuk-link">Print a copy of this report</a>
    </div>


    {{ govukButton({
        text: 'Finish',
        element: 'a',
        href: '/place-a-prisoner-on-report',
        attributes: {
            'data-test': 'place-a-prisoner-on-report'
        }
    }) }}

{% endblock %}