{% extends "../partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../partials/breadCrumb.njk" import breadCrumb %}

{% set title =  title | default('Sorry, there is a problem with the service') %}

{% block beforeContent %}
  {{ breadCrumb() }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ title }}</h1>
      <p class="govuk-body">
        You can try again.
      </p>
      <p class="govuk-body">
        {{ govukButton({
          text: "Continue",
          href: url,
          attributes: { "data-qa": "continue-after-error" }
        }) }}
      </p>
    </div>
  </div>
  <h2>{{ status }}</h2>
  <pre>{{ stack }}</pre>
{% endblock %}
