{% extends "../partials/layout.njk" %}
{% from "../partials/breadCrumb.njk" import breadcrumb %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set title = pageTitle %}

{% block beforeContent %}
    {{ breadcrumb() }}
{% endblock %}

{% block content %}

    <h1 class="govuk-heading-l">{{ title }}</h1>

    {% set items = [] %}

    {% for question in questions %}
        {% if question.type == 'OFFICER' %}
            {% set decisionHtml %}
               {% if decisionFormData.selectedDecisionId == question.id and decisionFormData.selectedDecisionData.userId != null %}
                   TODO
               {% else %}
                    <div class="flex-container flex-center">
                        <div class="govuk-!-margin-right-3">
                            {{ govukInput({
                                id: "userSearchInput" + question.id,
                                name: "userSearchInput" + question.id,
                                classes: "govuk-!-width-full-width",
                                value: decisionFormData.selectedDecisionData.userSearchInput,
                                errorMessage: errors | findErrors(['TODO']),
                                label: {
                                    text: "TODO",
                                    classes: "govuk-!-font-weight-bold"
                                }
                            }) }}
                        </div>
                        {{ govukButton({
                            text: "Search",
                            classes: "govuk-button--secondary conditionalRadioSearchButton",
                            type: "submit",
                            name: "searchUser",
                            value: "searchUser",
                            attributes: { "data-qa": "incite-prisoner-search" }
                        }) }}
                    </div>
                {% endif %}
            {% endset -%}
        {% else %}
            {% set decisionHtml = null %}
        {% endif %}
        {% set items = (items.push({
            value: question.id,
            text: question.label,
            conditional: {
                html: decisionHtml
            },
            checked: decisionFormData.selectedDecisionId == question.id
        }), items) %}
    {% endfor %}

    <form method="POST" novalidate="novalidate" class="govuk-!-margin-top-5">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
        {{ govukRadios({
            idPrefix: 'selectedDecisionId',
            name: 'selectedDecisionId',
            id: 'selectedDecisionId',
            attributes: { "data-qa": "radio-buttons" },
            items: items,
            errorMessage: "selectedDecisionId" | findError(errors)
        }) }}

        {{ govukButton({
            text: 'Continue',
            type: "submit",
            name: "decisionFormSubmit",
            classes: "govuk-button--submit govuk-!-margin-right-2",
            attributes: { "data-qa": "assault-submit" }
        }) }}


        {{ govukButton({
            text: 'Cancel',
            classes: "govuk-button--secondary",
            type: "submit",
            name: "decisionFormCancel",
            value: "decisionFormCancel",
            attributes: { "data-qa": "incite-prisoner-delete" }
        }) }}

    </form>
{% endblock %}