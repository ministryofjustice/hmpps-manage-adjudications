{% extends "../../partials/layout.njk" %}
{% from "../../partials/breadCrumb.njk" import breadcrumb %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macros/adjudicationTabHeader.njk" import adjudicationTabHeader %}
{% from "../../macros/adjudicationReviewStatusSummary.njk" import adjudicationReviewStatusSummary %}
{% from "../../macros/printLink.njk" import printLink %}
{% from "../../macros/adjudicationReviewPanel.njk" import adjudicationReviewPanel %}
{% from "../../macros/adjudicationSummary.njk" import adjudicationSummary %}

{% block pageTitle %}
  Hearing details
{% endblock %}
{% block beforeContent %}
  {{ breadcrumb() }}
{% endblock %}
{% block content %}
    {{ adjudicationTabHeader(reportNo, reviewData.reviewStatus, prisoner, 'report', reportHref, hearingsHref, reviewData.reviewStatus === 'Rejected') }}

    {{ adjudicationReviewStatusSummary(reviewData.reviewStatus, reviewData.reviewSummary, 'Not entered', 'govuk-!-margin-top-5') }}
  <div class="prisoner-report-top-bar flex-center govuk-!-margin-top-5">
    <p class="govuk-body govuk-!-padding-top-2" data-qa="reportNumber">
      <span class="govuk-!-font-weight-bold">Report number:</span>
      {{ reportNo }}</p>
    {{ printLink('Print a copy of this report', printHref, 'right', 'govuk-!-padding-right-0') }}
  </div>
  {{ adjudicationSummary(editIncidentDetailsURL, editOffencesDetailsURL, editDamagesURL, editEvidenceURL, editWitnessesURL, adjudicationUrls.incidentStatement.urls.submittedEdit(draftAdjudicationNumber), prisonerReportData, readOnly, readOnlyDamagesEvidenceWitnesses, offences, damages, evidence, witnesses, true) }}
  {% if review %}
    {{ adjudicationReviewPanel(returnLinkURL, csrfToken, pageData) }}
  {% endif %}
  {% if not review %}
    <p class="govuk-body">
      <a href={{ returnLinkURL }} class="govuk-link" data-qa="prisoner-report-return-link">{{ returnLinkContent }}</a>
    </p>
  {% endif %}
{% endblock %}