{% extends "../partials/layout.njk" %}
{% from "../partials/breadCrumb.njk" import breadcrumb %}
{% from "../partials/prisonerPlaybackSection.njk" import prisonerPlaybackSection %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block pageTitle %}
  Place the prisoner on report
{% endblock %}

{% block beforeContent %}
	{{ breadcrumb() }}
{% endblock %}

{% block content %}

	<h1 class="govuk-heading-l">Place {{ prisoner.friendlyName }} on report</h1>

	<div class="prisonerPlaybackSection govuk-!-margin-bottom-6">
		{{ prisonerPlaybackSection(prisoner.displayName, prisoner.prisonerNumber, prisoner.currentLocation) }}
	</div>

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-three-quarters">
			{{ govukTable({
				classes: 'taskListTable',
				attributes: attributes,
				rows: data
			}) }}

			<p class="govuk-body">You need to provide {{ prisonerFirstAndLastName }} with a printed copy of this report by {{ expirationTime }} on {{ expirationDay }}.</p>

		</div>
	</div>

{% endblock %}