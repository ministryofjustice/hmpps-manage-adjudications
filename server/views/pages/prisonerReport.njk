{% extends "../partials/layout.njk" %}
{% from "../partials/breadCrumb.njk" import breadcrumb %}
{% from "../macros/incidentDetailsSummaryList.njk" import incidentDetailsSummaryList %}
{% from "../macros/printLink.njk" import printLink %}
{% from "../partials/prisonerPlaybackSection.njk" import prisonerPlaybackSection %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% block pageTitle %}
	Prisonerâ€™s report
{% endblock %}

{% block beforeContent %}
 {{ breadcrumb() }}
{% endblock %}

{% block content %}

 <h1 class="govuk-heading-l">{{ prisoner.friendlyName | possessive }} report</h1>

 <div class="prisonerPlaybackSection">
  {{ prisonerPlaybackSection(prisoner.displayName, prisoner.prisonerNumber, prisoner.currentLocation) }}
 </div>

 <div class="prisoner-report-top-bar govuk-!-margin-top-5">
  <p class="govuk-body"><span class="govuk-!-font-weight-bold">Report number: </span>{{ data.reportNo }}</p>
  {{ printLink('Print a copy of this report', 'right', 'govuk-!-padding-right-0') }}
 </div>

 <div class="govuk-!-margin-top-5">
  <div class="flex-container prisonerReport-heading">
   <h2 class="govuk-heading-m">Incident details</h2>
   <a href='/incident-details/{{ prisoner.prisonerNumber }}/{{ data.draftId }}/edit' class="govuk-link" data-qa="prisoner-report-details-changeLink">Change</a>
  </div>
  <div class="prisonerReport-incidentDetails">
   {{ incidentDetailsSummaryList(data.incidentDetails, 'Not entered', { "data-qa": "prisoner-report-details" }) }}
  </div>

  <div class="flex-container prisonerReport-heading">
   <h2 class="govuk-heading-m govuk-!-margin-top-6">Incident statement</h2>
   <a href='/incident-statement/{{ prisoner.prisonerNumber }}/{{ data.draftId }}' class="govuk-link" data-qa="prisoner-report-statement-changeLink">Change</a>
  </div>
  <div class="prisonerReport-incidentStatement" data-qa="prisoner-report-statement">
   {{ data.statement | safe }}
  </div>
 </div>
 <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
 <p class="govuk-body"><a href='/your-completed-reports' class="govuk-link" data-qa="prisoner-report-return-link">Return to your complete reports</a></p>

{% endblock %}