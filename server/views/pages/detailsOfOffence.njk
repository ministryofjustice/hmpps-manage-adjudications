{% extends "../partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../partials/breadCrumb.njk" import breadcrumb %}
{% from "../partials/prisonerPlaybackSection.njk" import prisonerPlaybackSection %}
{% from "../macros/offenceQuestionsAndAnswers.njk" import offenceQuestionsAndAnswers %}

{% set title = "Offence details" %}

{% block pageTitle %}
    {{ title }}
{% endblock %}

{% block beforeContent %}
    {{ breadcrumb() }}
{% endblock %}

{% block content %}
    <h1 class="govuk-heading-l">{{ title }}</h1>
    <form method="POST" novalidate="novalidate" class="govuk-!-margin-top-5">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
        <div class="prisonerPlaybackSection govuk-!-margin-bottom-6">
            {{ prisonerPlaybackSection(prisoner.displayName, prisoner.prisonerNumber, prisoner.currentLocation) }}
        </div>
        {% if offences | length > 0 %}
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-three-quarters">
                    {% for offence in offences %}
                        {% set offenceIndex = loop.index %}
                        <div class="details-of-offence-questions-and-answers">
                            <div class="q-and-a">
                                {{ offenceQuestionsAndAnswers(offence.questionsAndAnswers, adjudicationNumber, offenceIndex) }}
                            </div>
                            <div>
                                <p class="govuk-body"><a href='{{ adjudicationUrls.detailsOfOffence.urls.delete(adjudicationNumber, offenceIndex) }}'
                                   data-qa="delete-{{ offenceIndex }}" class="govuk-link">Remove this offence</a></p>
                            </div>
                        </div>
                        <div data-qa="offence-broke-section-{{ offenceIndex }}">
                            <p class="govuk-!-margin-bottom-1 govuk-label--s">This offence broke:</p>
                            {% if offence.incidentRule %}
                                <p class="govuk-!-margin-bottom-1 govuk-label--xs">{{ offence.isYouthOffender | prisonRule }},
                                    paragraph {{ offence.incidentRule.paragraphNumber }}</p>
                                <p class="govuk-!-margin-bottom-1 govuk-label--xs">{{ offence.incidentRule.paragraphDescription }}</p>
                            {% endif %}
                            <p class="govuk-!-margin-bottom-1 govuk-label--xs">{{ offence.isYouthOffender | prisonRule }},
                                paragraph {{ offence.offenceRule.paragraphNumber }}</p>
                            <p class="govuk-!-margin-bottom-1 govuk-label--xs">{{ offence.offenceRule.paragraphDescription }}</p>
                            <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
                        </div>
                    {% endfor %}
                </div>
            </div>
            <p class="govuk-body"><a href="{{ adjudicationUrls.offenceCodeSelection.urls.start(adjudicationNumber,incidentRole) }}"
                                     data-qa="add-another-offence">Add another offence</a></p>
            {{ govukButton({
                text: "Save and continue",
                type: "submit",
                classes: "govuk-button--submit",
                attributes: { "data-qa": "details-of-offence-submit" }
            }) }}
        {% else %}
            <p class="govuk-body">This report does not currently have any details</p>
            <p class="govuk-body">You must add offence details</p>
            {{ govukButton({
                text: "Continue",
                type: "submit",
                name: "addOffence",
                value: "addOffence",
                classes: "govuk-button--submit",
                attributes: { "data-qa": "details-of-offence-continue" }
            }) }}
        {% endif %}
    </form>
{% endblock %}