{% extends "../partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../partials/breadCrumb.njk" import breadcrumb %}
{% from "../partials/prisonerPlaybackSection.njk" import prisonerPlaybackSection %}

{% set title = "Offence details" %}

{% block pageTitle %}
    {{ title }}
{% endblock %}

{% block beforeContent %}
    {{ breadcrumb() }}
{% endblock %}

{% block content %}
    <h1 class="govuk-heading-l">{{ title }}</h1>
    <form method="POST" novalidate="novalidate" class="govuk-!-margin-top-5">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
        <div class="prisonerPlaybackSection govuk-!-margin-bottom-6">
            {{ prisonerPlaybackSection(prisoner.displayName, prisoner.prisonerNumber, prisoner.currentLocation) }}
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-three-quarters">
                {% for offence in offences %}
                    {% set offenceIndex = loop.index - 1 %}
                    {% for questionAndAnswer in offence.questionsAndAnswers %}
                        <div class="flex-container details-of-offence-question-heading">
                            <p class="govuk-!-margin-bottom-1 govuk-label--s">{{ questionAndAnswer.question }}</p>
                            {% if loop.first == true %}
                                <a href='/details-of-offence/{{ adjudicationNumber }}/delete/{{ offenceIndex }}'>Delete</a>
                            {%  endif %}
                        </div>
                        <p class="govuk-!-margin-bottom-5 govuk-label--xs">{{ questionAndAnswer.answer }}</p>
                    {% endfor %}
                    <p class="govuk-!-margin-bottom-1 govuk-label--s">This offence broke:</p>
                    {% if offence.incidentRule %}
                        <p class="govuk-!-margin-bottom-1 govuk-label--xs">Prison rule 51,
                            paragraph {{ offence.incidentRule.paragraphNumber }}</p>
                        <p class="govuk-!-margin-bottom-1 govuk-label--xs">{{ offence.incidentRule.paragraphDescription }}</p>
                    {% endif %}
                    <p class="govuk-!-margin-bottom-1 govuk-label--xs">Prison rule 51,
                        paragraph {{ offence.offenceRule.paragraphNumber }}</p>
                    <p class="govuk-!-margin-bottom-1 govuk-label--xs">{{ offence.offenceRule.paragraphDescription }}</p>
                    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
                {% endfor %}
            </div>
        </div>
        <p class="govuk-body"><a href="/offence-code-selection/{{ adjudicationNumber }}/{{ incidentRole }}">Add another offence</a></p>
        {{ govukButton({
            text: "Save and continue",
            type: "submit",
            classes: "govuk-button--submit",
            attributes: { "data-qa": "details-of-offence-submit" }
        }) }}
    </form>
{% endblock %}