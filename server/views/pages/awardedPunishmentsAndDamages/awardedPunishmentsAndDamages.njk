{% extends "../../partials/layout.njk" %}
{% from "../../partials/breadCrumb.njk" import breadcrumb %}
{% from "../../macros/hearingsAndResidentalLocationFilter.njk" import hearingsAndResidentalLocationFilter %}
{% from '../../macros/awardedPunishmentsAndDamagesTabHeader.njk' import awardedPunishmentsAndDamagesTabHeader %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% set title = "View awarded punishments and damages" %}

{% block pageTitle %}
  {{ title }} - Adjudications - Digital Prison Services
{% endblock %}

{% block beforeContent %}
  {{ breadcrumb() }}
{% endblock %}

{% block content %}
  {% if errors | length %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: errors,
      attributes: { "data-qa": "error-summary" }
    }) }}
  {% endif %}
  <h1 class="govuk-heading-l">{{ title }}</h1>

  {{ awardedPunishmentsAndDamagesTabHeader(activeTab, allAwardedPunishmentsAndDamagesHref, financialAwardedPunishmentsAndDamagesHref, additionalDaysAwardedPunishmentsHrefHref) }}

  {{ hearingsAndResidentalLocationFilter({filter: filter, locations: possibleLocations, clearUrl: clearUrl, csrfToken: csrfToken}) }}

  {% set rows = [] %}
  {% for hearing in hearings %}
    {% set hearingNumber = loop.index %}

    {% set printLinkHtml %}
      <a href="{{ adjudicationUrls.printPdf.urls.dis7(hearing.chargeNumber) }}" class="govuk-link" data-qa="print-report-link-{{ hearingNumber }}">Print<span class="govuk-visually-hidden"> DIS7 for {{ hearing.chargeNumber }}</span></a>
    {% endset -%}

    {% set punishmentsLinkHtml %}
      <a href="{{ adjudicationUrls.punishmentsAndDamages.urls.review(hearing.chargeNumber) }}" class="govuk-link" data-qa="view-punishments-link-{{ hearingNumber }}">View<span class="govuk-visually-hidden"> report for {{ hearing.chargeNumber }}</span></a>
    {% endset -%}

    {% set rows = (rows.push([
      { text: hearing.chargeNumber },
      { text: hearing.nameAndNumber },
      { text: hearing.location },
      { text: hearing.formattedDateTimeOfHearing,
        attributes: {
        "data-sort-value": hearing.dateTimeOfHearing
      }
      },
      { text: hearing.status | reportedAdjudicationStatusDisplayName },
      { text: hearing.caution | showDefault('-') },
      { text: hearing.punishmentsAwarded | showDefault('-') },
      { text: hearing.damages | showDefault('-') },
      { html: printLinkHtml },
      { html: punishmentsLinkHtml }
    ]), rows) %}
  {% endfor %}

  {% if rows | length %}
    <div class="results-table">
      {{ govukTable({
        head: [
          { text: "Charge number" },
          { text: "Name and prison number",
            attributes: {
            "aria-sort": "none"
          }
          },
          { text: "Location" },
          { text: 'Hearing date and time' },
          { text: "Status" },
          { text: "Caution" },
          { text: "Punishments awarded" },
          { text: "Damages" },
          { text: "" },
          { text: "" }
        ],
        rows: rows,
        attributes: { "data-qa": "awarded-punishments-and-damages-results-table", "data-module": "moj-sortable-table" }
      }) }}
    </div>
  {% else %}
    <p class="govuk-!-padding-top-3" data-qa="no-results-message">No awarded punishments</p>
  {% endif %}

{% endblock %}

{% block pageScripts %}
  <script src="/assets/js/hearingDateShift.js"></script>
{% endblock %}
